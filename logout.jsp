        <h3>Logging Out</h3>

        <p>You have successfully logged out.</p>

        <a href="login.jsp" class="btn btn-primary">Login Again</a>
    </div>

    <script>
        // Clear session attributes to log the user out
        <% 
            session.invalidate();
        %>
    </script>

